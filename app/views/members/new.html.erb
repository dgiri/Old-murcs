<% semantic_form_for @member, :url => members_path do |f| %>
<%= @project.name %>
	<%= f.error_messages %>     
	<% f.inputs do %>
		<%= f.input :email %>
		<%= f.input :role, :as  => :select, :collection => ProjectMembership::ROLES %>
		<%= f.input :project_id, :as  => :hidden, :value=> @project.id %>       
	<% end %>
  <% f.buttons do %>
    <%= f.commit_button "Send Invitation" %>
  <% end %>	
<% end %>
