<% semantic_form_for [@project, @membership || Membership.new] do |f| %>
  <%= f.error_messages %>
  <% f.inputs 'Add Member' do %>
    <%= f.input :recipient_email, :label => 'Email' %>
    <%= f.input :role_id, :collection => Membership.roles %>
  <% end %>
  <% f.buttons do %>
    <%= f.commit_button 'Add member' %>
  <% end %>
<% end %>
